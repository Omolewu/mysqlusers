<%- include('../includes/header.ejs')  %>
</head>
<body>
    <div>
        <a href="/add-user">Add New User</a>
    </div>
    <h2>Admin Home Page</h2>
    <table class="table table-hover">
        <thead>
            <tr>
              <th scope="col">S/N</th>
              <th scope="col">Title</th>
              <th scope="col">Price</th>
              <th scope="col">Image</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
          <% if(products.length > 0) {
            let sn=1
            for(let product of products){
                %>
            <tr>
              <th scope="row"><%= sn++ %></th>
              <td><%= product.title %></td>
              <td><%= product.price %></td>
              <td><img src="<%= product.image %>" alt="<%= product.title %>"  style="width:150px"></td>
             <td>
                <a href="/update-product/<%= product.id %>" class="btn btn-warning">Update</a>
                <form action="/delete-product" method="post" style="display:inline-block">
                  <input type="hidden" value="<%= product.id %>" name="id" >
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
             </td>
            </tr>
      <%  }
    }  
    %>
          </tbody>
      </table>
<%- include('../includes/footer.ejs') %> 